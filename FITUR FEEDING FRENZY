#include <iostream>
#include <fstream>
#include <windows.h>
#include <string>
#include <cmath>
#include <ncurses/ncurses.h>

using namespace std;

void delay(int milliseconds) {
    Sleep(milliseconds);
}

void gotoxy(int x, int y) {
    COORD coord;
    coord.X = x;
    coord.Y = y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
}
